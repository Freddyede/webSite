{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}
{% block content %}
<div class="row">
    <h1>Connexion</h1>
    <form action="{{ path('security_admin_login') }}" method="POST">
        <div class="form-group col-xs-12 text-center">
            <label for="mail">Email :</label>
            <input class="form-control text-center" id="mail" placeholder="Adresse email..." required type="text" name="_username">
        </div>
        <div class="form-group col-xs-12 text-center">
            <label for="Password">Password :</label>
            <input class="form-control text-center" id="Password" placeholder="Mot de passe ..." required type="password" name="password">
        </div>
        <div class="form-group col-xs-12 text-center">
            <button type="submit" class="btn btn-success">Connexion !!!</button>
        </div>
    </form>
</div>
{% endblock %}